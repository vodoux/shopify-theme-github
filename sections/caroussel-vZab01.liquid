    {
      "type": "range",
      "id": "gradient_top_height",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Top gradient height",
      "default": 100,
      "info": "Height of the top gradient fade effect"
    },
    {
      "type": "paragraph",
      "content": "Bottom gradient settings"
    },
    {
      "type": "color",
      "id": "gradient_bottom_color",
      "label": "Bottom gradient color",
      "default": "#000000",
      "info": "Color fades from solid at bottom to transparent"
    },
    {
      "type": "range",
      "id": "gradient_bottom_height",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Bottom gradient height",
      "default": 100,
      "info": "Height of the bottom gradient fade effect"
    },
    {
      "type": "checkbox",
      "id": "enable_rounded_images",
      "label": "Enable rounded images",
      "default": true,
      "info": "Adds rounded corners to product images"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Image corner radius",
      "default": 15,
      "info": "Only applies when rounded images are enabled"
    },
    {
      "type": "checkbox",
      "id": "enable_title_line",
      "label": "Enable animated title underline",
      "default": true,
      "info": "Animated decorative line under the title"
    },
    {
      "type": "range",
      "id": "title_line_width",
      "min": 30,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Title line width",
      "default": 80,
      "info": "Only applies when title underline is enabled"
    }
  ],
  "presets":
  [
    {
      "name": "Collection carousel vZAB"
    }
  ],
  "disabled_on": {
    "groups":[
      "header",
      "footer",
      "aside"
    ]
  }
}
