{%- liquid

  assign section_padding = ''
  if section.settings.section_padding == 'top'
    assign section_padding = 'pb0'
  elsif section.settings.section_padding == 'bottom'
    assign section_padding = 'mt0'
  elsif section.settings.section_padding == 'none'
    assign section_padding = 'mt0 pb0'
  endif

  assign full_width = false
  if section.settings.display_wide == true
    assign full_width = true
  endif

-%}

<div class="global__section {{ section_padding }}"><section class="homepage-featured-video-{{ section.id }} {% if settings.animation != 'none' %} animate {{ settings.animation }}{% endif %}{% if full_width %} section--full-width{% endif %}"
   data-section-id="{{ section.id }}"
   data-section-loaded="false"
   data-section-type="featured-video-section">

  {% if section.settings.heading != blank %}
    <div class="row grid__wrapper">
      <h2 class="section-title span-12 auto">{{ section.settings.heading | escape }}</h2>
    </div>
  {% endif %}

  {% if full_width %}
  {% else %}
  <div class="row grid__wrapper">
    <div class="span-12 auto">
      {% endif %}

      <div class="videoWrapper">
        {% if section.settings.video_url == blank and section.settings.video_url_mp4 == blank %}
          <iframe src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720" title="{{ section.settings.description | escape }}" width="850" height="480" frameborder="0" allowfullscreen></iframe>
        {% endif %}
        {% if section.settings.video_url_mp4 != blank %}
          {{ section.settings.video_url_mp4 | video_tag: image_size: '2000x', controls: true, playsinline: true, preload: 'metadata', class: 'section-video js-video', title: section.settings.description }}
        {% else %}
          {% if section.settings.video_url.type == "youtube" %}
            <iframe src="//www.youtube.com/embed/{{ section.settings.video_url.id }}?rel=0&showinfo=0&vq=720" title="{{ section.settings.description | escape }}" width="850" height="480" frameborder="0" allowfullscreen></iframe>
          {% endif %}
          {% if section.settings.video_url.type == "vimeo" %}
            <iframe src="//player.vimeo.com/video/{{ section.settings.video_url.id }}?byline=0&portrait=0&badge=0" title="{{ section.settings.description | escape }}" width="850" height="480" frameborder="0" allowfullscreen></iframe>
          {% endif %}
        {% endif %}

      </div>

      {% if full_width %}
      {% else %}
    </div>
  </div>
  {% endif %}

</section></div>

{% schema %}
{
  "name": "Video",
  "settings":
  [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Video"
    },
    {
      "type": "checkbox",
      "id": "display_wide",
      "label": "Full width"
    },
    {
      "type": "video",
      "id": "video_url_mp4",
      "label": "A Shopify-hosted video"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "YouTube or Vimeo link",
      "accept":
      [
        "youtube",
        "vimeo"
      ],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
    },
    {
      "type": "text",
      "id": "description",
      "default": "Describe the video for customers using screen readers",
      "label": "Video alt text"
    },
    {
      "type": "select",
      "id": "section_padding",
      "label": "Section spacing",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "both",
          "label": "Both"
        },
        {
          "value": "none",
          "label": "None"
        }
      ],
      "default": "both"
    }
  ],
  "presets":
  [
    {
      "name": "Video"
    }
  ],
  "disabled_on": {
    "groups":[
      "header",
      "footer",
      "aside"
    ]
  }
}
{% endschema %}
