<div class="row">
  {%- liquid

    if product.template_suffix == 'pre-order'
      assign button_text = 'products.product.pre_order' | t
      assign call_to_action = 'products.product.pre_order' | t
    else
      assign button_text = 'products.product.add_to_cart' | t
      assign call_to_action = 'products.product.add_to_cart' | t
    endif

    assign current_variant = product.selected_or_first_available_variant
    unless current_variant.available
      assign call_to_action = 'products.product.sold_out' | t
    endunless

    assign product_form_id = 'product-form-' | append: section.id
    assign product_buttons_form_id = 'product-form-buttons-' | append: section.id

    assign gallery_class = 'span-6'
    assign content_class = 'span-6'

    case section.settings.media_size
      when 'large'
        assign gallery_class = 'span-7'
        assign content_class = 'span-5'
      when 'medium'
        assign gallery_class = 'span-6'
        assign content_class = 'span-6'
      when 'small'
        assign gallery_class = 'span-5'
        assign content_class = 'span-7'
    endcase

  -%}

  {% capture product_form_config %}
    { "money_format": {{ shop.money_format | json }},
      "enable_history": true,
      "sold_out": {{ "products.product.sold_out" | t | json }},
      "button": {{ button_text | json }},
      "unavailable": {{ 'products.product.unavailable' | t | json }},
      "only_left": {
        "one": {{ 'products.product.only_left.one' | t | json }},
        "other": {{ 'products.product.only_left.other' | t | json }}
      },
      "savings": {{ 'products.general.savings' | t | json }},
      "quickview": false,
      "featured_product": false,
      "swatches": {{ settings.product_variants | json }}
    }
  {% endcapture %}

  <section class="product-page product-template clearfix main__section" id="product-{{ product.id }}"
    data-product-id="{{ product.id }}"
    data-section-id="{{ section.id }}"
    data-section-type="product-section"
    data-section-loaded="false"
    data-url="{{ product.url }}"
    data-sale-format="{{ settings.sale_items }}"
    data-main-product
    data-initial-variant="{{ current_variant.featured_media.id }}">

    <meta itemprop="url" content="{{ routes.root_url }}{{ product.url }}">
    <meta itemprop="image" content="{{ product.featured_media | image_url: width: 1024 }}">

    {% render 'product-json', product: product %}

    {%- liquid

      assign gallery_full = false

      if section.settings.pf_gallery_style == 'full_width' and product.media.size >= 3
        assign gallery_style = 'data-gallery-fullwidth'
        assign gallery_full = true
      elsif section.settings.pf_gallery_style == 'scroll_large' or section.settings.pf_gallery_style == 'scroll_large_first'
        assign gallery_style = 'data-gallery-scroll'
        assign gallery_data = 'data-scroll-gallery'
        case section.settings.pf_gallery_style
          when 'scroll_large'
            assign scroll_type = 'scroll_full'
          when 'scroll_large_first'
            assign scroll_type = 'scroll_small'
        endcase
      else
        assign gallery_style = 'data-gallery-thumbnails'
      endif

      assign thumbnail_position = section.settings.thumbnail_position
      assign click_to_enlarge = section.settings.click_to_enlarge
      assign enable_video_looping = section.settings.enable_video_looping

    -%}

    {% capture product_gallery_config %}
      {
        "thumbPosition": {{ section.settings.thumbnail_position | json }},
        "thumbsShown": 3,
        "clickToEnlarge": {{ section.settings.click_to_enlarge | json }},
        "enableVideoLooping": {{ section.settings.enable_video_looping | json }},
        "mainSlider": {% if product.media.size <= 1 %}false{% else %}true{% endif %},
        "thumbSlider": {% if product.media.size >= 4 %}true{% else %}false{% endif %},
        "productId": {{ product.id | json }},
        "isQuick": false,
        "adaptiveHeight": {{ section.settings.adaptive_height | json }}
      }
    {% endcapture %}

    {% capture 'layout_images' %}
      <div id="product-photos" {{ gallery_style }}
        class="product-photos carousel-container js-product-gallery{% if section.settings.pf_gallery_style contains 'scroll' %} product__section-image--{{ scroll_type }}{% endif %}{% if settings.animation != 'none' %} animate {{ settings.animation }} delay--1{% endif %}"
        data-product-single-media-group
        data-gallery-config='{{ product_gallery_config }}'
        {{ gallery_data }}>
        {% if product.featured_media %}
         {% if gallery_style == 'data-gallery-thumbnails' %}
          {% render 'product-image-gallery',
            product: product,
            gallery_style: gallery_style,
            thumbnail_position: thumbnail_position,
            click_to_enlarge: click_to_enlarge,
            enable_video_looping: enable_video_looping
          %}
         {% elsif gallery_style == 'data-gallery-scroll' %}
          {% render 'product-scroll-gallery',
            product: product,
            gallery_style: gallery_style,
            thumbnail_position: thumbnail_position,
            click_to_enlarge: click_to_enlarge,
            enable_video_looping: enable_video_looping,
            gallery_date: gallery_data
          %}
         {% else %}
          {% render 'product-full-gallery',
            product: product,
            gallery_style: gallery_style,
            thumbnail_position: thumbnail_position,
            click_to_enlarge: click_to_enlarge,
            enable_video_looping: enable_video_looping 
          %}
         {% endif %}
        {% else %}
          {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
          {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    {% endcapture %}


    {% capture product_blocks_area %}
      {% if section.blocks.size > 0 %}
        <div class="product-blocks {% if settings.animation != 'none' %} animate {{ settings.animation }} delay--2{% endif %}">

          {% for block in section.blocks %}
          {% case block.type %}

            {% when 'title' %}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }}"
                {{ block.shopify_attributes }}>
                <h1>{{ product.title }}</h1>
              </div><!-- /.product-blocks__block -->
              <div class="clear"></div>

            {% when 'pickup_availability' %}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }}"
                {{ block.shopify_attributes }}>
                {%
                  render 'snip-product-pickup-availability',
                  classes: 'product-single__store-availability-container',
                  product: product,
                  current_variant: current_variant,
                  block: block,
                  shop: shop,
                  routes: routes
                %}
              </div>

            {% when 'quantity' %}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }}"
                {{ block.shopify_attributes }}>
                  <label
                    class="option-label"
                    for="product-qty-{{ product.id }}">
                    {{ 'products.product.quantity' | t }}
                  </label>
                  <div class="quantity-selector mb20">
                    <button
                      class="quantity-control-down"
                      type="button">
                      <span class="visually-hidden">{{ 'cart.general.decrease' | t: product: product.title | escape }}</span>
                    -</button>
                    <input
                      id="product-qty-{{ product.id }}"
                      type="text"
                      name="quantity"
                      class="product-qty quantity" {% if current_variant.inventory_management == 'shopify' %}{% unless current_variant.inventory_policy == 'continue' %}
                      data-limit="{{ current_variant.inventory_quantity }}"
                      {% endunless %}{% endif %}
                      value="1"
                      style="max-width: 50px; text-align: center; margin: 0 auto 10px;"/>
                    <button
                      class="quantity-control-up"
                      type="button">
                      <span class="visually-hidden">{{ 'cart.general.increase' | t: product: product.title | escape }}</span>
                    +</button>
                  </div><!-- /.quantity-selector.mb20 -->
                  <input
                  class="formVariantId"
                  name=""
                  type="hidden"
                  value="{{ product.selected_or_first_available_variant.id }}">
              </div><!-- /.product-blocks__block -->
              <div class="clear"></div>


            {% when 'accordion_content' %}
                {% if gallery_full %}
                  {% continue %}
                {% endif %}
                <div
                  class="product-blocks__block product-blocks__block--{{ block.type }} {% if block.settings.show_as_accordion %}product-blocks__block--accordion-item{% endif %}"
                  {{ block.shopify_attributes }}>
                  {%- liquid

                    assign accordion_header = block.settings.accordion_heading
                    assign accordion_content = blank

                    assign accordion_page = block.settings.page
                    if accordion_page == blank
                     assign accordion_page = pages[block.settings.page]
                    endif

                    assign accordion_content = accordion_page.content

                    if accordion_content == blank
                     assign accordion_content = block.settings.richtext
                    endif

                  -%}

                  {% capture accordion_heading_capture %}
                    {{ block.settings.accordion_heading }}
                  {% endcapture %}
                  {% capture accordion_content_capture %}
                    {{ accordion_content }}
                  {% endcapture %}
                  {%
                    render 'accordion-item',
                    accordion_heading_capture: accordion_heading_capture,
                    accordion_content_capture: accordion_content_capture,
                    default_open: block.settings.default_open_accordion,
                    unique_id: block.id
                  %}
              </div><!-- /.product-blocks__block -->
              <div class="clear"></div>

            {% when 'details' %}
              {% if gallery_full %}
                {% continue %}
              {% endif %}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }} {% if block.settings.show_as_accordion %}product-blocks__block--accordion-item{% endif %}"
                {{ block.shopify_attributes }}>

                {% if block.settings.show_as_accordion %}
                  {% capture accordion_heading_capture %}
                    {{ 'products.product.product_details' | t }}
                  {% endcapture %}
                  {% capture accordion_content_capture %}
                   {%
                     render 'product-details',
                     block: block,
                     product: product
                   %}
                  {% endcapture %}
                  {%
                    render 'accordion-item',
                    accordion_heading_capture: accordion_heading_capture,
                    accordion_content_capture: accordion_content_capture,
                    default_open: block.settings.default_open_accordion,
                    unique_id: block.id
                  %}
                {% else %}
                  <h5 class="h5">{{ 'products.product.product_details' | t }}</h5>
                  {%
                    render 'product-details',
                    block: block,
                    product: product
                  %}
                {% endif %}
              </div><!-- /.product-blocks__block -->
              <div class="clear"></div>

            {% when 'stock_levels' %}
                <div
                class="product-blocks__block product-blocks__block--{{ block.type }}"
                {{ block.shopify_attributes }}>
                  {%
                    render 'product-stock-levels',
                    block: block,
                    current_variant: current_variant
                  %}
              </div><!-- /.product-blocks__block -->
              <div class="clear"></div>

            {% when 'complementary_products' %}
              {% if gallery_full %}
                {% continue %}
              {% endif %}
              <div class="complementary__products product-blocks__block product-blocks__block--{{ block.type }}{% if block.settings.show_as_accordion %} product-blocks__block--accordion-item{% endif %}" data-complementary-products {{ block.shopify_attributes }}>
                {% if block.settings.show_as_accordion %}
                  {% capture accordion_heading_capture %}
                    {{ block.settings.heading | escape }}
                  {% endcapture %}
                  {% capture accordion_content_capture %}
                    {% render 'complementary-products',
                      block: block,
                      section: section,
                      product: product
                    %}
                  {% endcapture %}
                  {%
                    render 'accordion-item',
                    accordion_heading_capture: accordion_heading_capture,
                    accordion_content_capture: accordion_content_capture,
                    default_open: block.settings.default_open_accordion,
                    unique_id: block.id
                  %}
                {% else %}
                  {% render 'complementary-products',
                    block: block,
                    section: section,
                    product: product
                  %}
                {% endif %}
              </div>

            {% when 'buttons' %}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }}"
                {{ block.shopify_attributes }}>
                  {%
                    render 'product-buttons',
                    product: product,
                    current_variant: current_variant,
                    call_to_action: call_to_action,
                    product_form_id: product_buttons_form_id,
                    product_form_config: product_form_config,
                    show_gift_card_recipient: block.settings.show_gift_card_recipient
                  %}
              </div><!-- /.product-blocks__block -->
              <div class="clear"></div>

            {% when 'price' %}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }}"
                {{ block.shopify_attributes }}>

                <!-- price -->
                <h2 class="h5">
                  {% render 'product-price', variant: current_variant, product: product %}
                </h2>

                <!-- tax -->
                {%- if section.settings.show_tax_info -%}
                  {%- if cart.taxes_included or shop.shipping_policy.body != blank -%}
                    <div class="product__policies rte" data-product-policies>
                      {%- if cart.taxes_included -%}
                        {{ 'products.product.include_taxes' | t }}
                      {%- endif -%}
                      {%- if shop.shipping_policy.body != blank -%}
                        {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                {%- endif -%}

                <!-- spi -->
                {%- form 'product', product, id: 'product-form-installment', class: 'tpo_ignore' -%}
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                  <select style="display:none;" name='id'>
                    {% for variant in product.variants %}
                      <option value="{{ variant.id }}" {% if variant == current_variant %}selected="selected"{% endif %}></option>
                    {% endfor %}
                  </select>
                  <div class="spi-banner">
                    {{ form | payment_terms }}
                  </div><!-- /#spi-banner -->
                {%- endform -%}
              </div><!-- /.product-blocks__block -->
              <div class="clear"></div>

            {% when 'variant_picker' %}
              {%- liquid
                assign show_size_chart = block.settings.show_size_chart
                assign size_chart_label = block.settings.size_chart_label
                assign size_chart_page = block.settings.size_chart_page
                assign size_chart_type = block.settings.type
              -%}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }}"
                {{ block.shopify_attributes }}>
                {%
                  form 'product', product,
                  id: product_form_id,
                  class: "product_form tpo_ignore",
                  data-product-form: product_form_config,
                  data-product-id: product.id
                %}
                  {%
                    render 'product-variants',
                    product: product,
                    current_variant: current_variant,
                    show_size_chart: show_size_chart,
                    size_chart_label: size_chart_label,
                    size_chart_page: size_chart_page,
                    size_chart_type: size_chart_type,
                    section_id: section.id
                  %}
                {% endform %}
              </div><!-- /.product-blocks__block -->

            {% when 'additional_content' %}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }}"
                {{ block.shopify_attributes }}>
                {%
                  render 'additional-content',
                  block: block
                %}
              </div><!-- /.product-blocks__block -->
              <div class="clear"></div>

            {% when 'description' %}
              {% if gallery_full %}
                {% continue %}
              {% endif %}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }} {% if block.settings.show_as_accordion %}product-blocks__block--accordion-item{% endif %}"
                {{ block.shopify_attributes }}>

                {% if block.settings.show_as_accordion %}
                  {% capture accordion_heading_capture %}
                    {{ 'products.product.product_description' | t }}
                  {% endcapture %}
                  {% capture accordion_content_capture %}
                    {{ product.description | split: '<!-- split -->' | first }}
                  {% endcapture %}
                  {%
                    render 'accordion-item',
                    accordion_heading_capture: accordion_heading_capture,
                    accordion_content_capture: accordion_content_capture,
                    default_open: block.settings.default_open_accordion,
                    unique_id: block.id
                  %}
                {% else %}
                  <div class="rte">
                    {{ product.description | split: '<!-- split -->' | first }}
                  </div>
                {% endif %}
              </div><!-- /.product-blocks__block -->
              <div class="clear"></div>

            {% when 'share' %}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }}"
                {{ block.shopify_attributes }}>
                <div id="soc">
                  {% render 'social' with product %}
                </div><!-- /#soc -->
              </div><!-- /.product-blocks__block -->
              <div class="clear"></div>

            {% when 'payment_icons' %}
              <div class="product-blocks__block product-blocks__block--{{ block.type }}"
                  style="background-color:{{ block.settings.background_color }};" {{ block.shopify_attributes }}>
                {% if block.settings.title != blank %}
                  <h5>{{ block.settings.title | escape }}</h5>
                {% endif %}
              {% for type in shop.enabled_payment_types %}
                {{ type | payment_type_svg_tag: class:'payment-icon' }}
              {% endfor %}
              </div>

            {%- when 'rating' -%}
              {%- if product.metafields.reviews.rating.value != blank -%}
                <div class="product__section--rating-wrapper">
                  {% liquid
                    assign rating_decimal = 0
                    assign decimal = product.metafields.reviews.rating.value.rating | modulo: 1
                    if decimal >= 0.3 and decimal <= 0.7
                    assign rating_decimal = 0.5
                  elsif decimal > 0.7
                    assign rating_decimal = 1
                    endif
                  %}
                  <div class="product__section-rating" role="img" aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: product.metafields.reviews.rating.value, rating_max: product.metafields.reviews.rating.value.scale_max }}">
                    <span aria-hidden="true" class="product__section-rating-star color-icon" style="--rating: {{ product.metafields.reviews.rating.value.rating | floor }}; --rating-max: {{ product.metafields.reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};">
                    </span>
                  </div>
                  <p class="product__section-rating-text caption">
                    <span aria-hidden="true">{{ product.metafields.reviews.rating.value }} / {{ product.metafields.reviews.rating.value.scale_max }}</span>
                  </p>
                  <p class="product__section-rating-count caption">
                    <span aria-hidden="true">({{ product.metafields.reviews.rating_count }})</span>
                    <span class="visually-hidden">{{ product.metafields.reviews.rating_count }} {{ "accessibility.total_reviews" | t }}</span>
                  </p>
                </div>
              {%- endif -%}
            
            {% when 'richtext' %}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }}"
                {{ block.shopify_attributes }}>
                {{ block.settings.richtext  }}
              </div><!-- /.product-blocks__block -->
              <div class="clear"></div>

            {% when '@app' %}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }}"
                {{ block.shopify_attributes }}>
                    {%
                      form 'product', product,
                      id: product_form_id,
                      class: "product_form tpo_ignore",
                      data-product-form: product_form_config,
                      data-product-id: product.id
                    %}
                    {% render block %}
                    {% endform %}
              </div>

            {%- when 'product_customization' -%}
              {%
                render 'product-customizations',
                block: block,
                product_buttons_form_id: product_buttons_form_id
              %}
              <div
                class="product-blocks__block product-blocks__block--{{ block.type }}"
                {{ block.shopify_attributes }}>
                {% render block %}
              </div><!-- /.product-blocks__bloprock -->
              <div class="clear"></div>
            {% when 'custom_liquid' %}
              {% render 'custom-liquid-block', block: block %}
            {% when 'b2b_quick_order' %}
              {% render 'b2b-quick-order', block: block %}
            {% else %}
              {% continue %}
            {% endcase %}
        {% endfor %}

        </div><!-- /.product-block-content -->
      {% endif %}
    {% endcapture %}

    <div class="grid__wrapper edge">
      {% if gallery_full %}
        <div class="span-12 auto">
          {{ layout_images }}
        </div>
        <div class="product-bottom js-product-bottom span-12 auto grid__wrapper grid__wrapper-nest">
          <div class="accordion span-5 push-1 md-span-6 sm-span-12 auto">
            {% if section.blocks.size > 0 %}
              {% for block in section.blocks %}
                {% case block.type %}

                  {% when 'description' %}
                    <div
                      class="product-blocks__block product-blocks__block--{{ block.type }} {% if block.settings.show_as_accordion %}product-blocks__block--accordion-item{% endif %}"
                      {{ block.shopify_attributes }}>

                      {% if block.settings.show_as_accordion %}
                        {% capture accordion_heading_capture %}
                          {{ 'products.product.product_description' | t }}
                        {% endcapture %}
                        {% capture accordion_content_capture %}
                          {{ product.description | split: '<!-- split -->' | first }}
                        {% endcapture %}
                        {%
                          render 'accordion-item',
                          accordion_heading_capture: accordion_heading_capture,
                          accordion_content_capture: accordion_content_capture,
                          default_open: block.settings.default_open_accordion,
                          unique_id: block.id
                        %}
                      {% else %}
                        <div class="rte">
                          {{ product.description | split: '<!-- split -->' | first }}
                        </div>
                      {% endif %}
                    </div><!-- /.product-blocks__block -->
                    <div class="clear"></div>

                  {% when 'details' %}
                    <div
                      class="product-blocks__block product-blocks__block--{{ block.type }} {% if block.settings.show_as_accordion %}product-blocks__block--accordion-item{% endif %}"
                      {{ block.shopify_attributes }}>

                      {% if block.settings.show_as_accordion %}
                        {% capture accordion_heading_capture %}
                          {{ 'products.product.product_details' | t }}
                        {% endcapture %}
                        {% capture accordion_content_capture %}
                         {%
                           render 'product-details',
                           block: block,
                           product: product
                         %}
                        {% endcapture %}
                        {%
                          render 'accordion-item',
                          accordion_heading_capture: accordion_heading_capture,
                          accordion_content_capture: accordion_content_capture,
                          default_open: block.settings.default_open_accordion,
                          unique_id: block.id
                        %}
                      {% else %}
                        <h5 class="h5">{{ 'products.product.product_details' | t }}</h5>
                        {%
                          render 'product-details',
                          block: block,
                          product: product
                        %}
                      {% endif %}
                    </div><!-- /.product-blocks__block -->
                    <div class="clear"></div>

                  {% when 'accordion_content' %}
                      <div
                        class="product-blocks__block product-blocks__block--{{ block.type }} {% if block.settings.show_as_accordion %}product-blocks__block--accordion-item{% endif %}"
                        {{ block.shopify_attributes }}>
                        {%- liquid

                          assign accordion_header = block.settings.accordion_heading
                          assign accordion_content = blank

                          assign accordion_page = block.settings.page
                          if accordion_page == blank
                           assign accordion_page = pages[block.settings.page]
                          endif

                          assign accordion_content = accordion_page.content

                          if accordion_content == blank
                           assign accordion_content = block.settings.richtext
                          endif

                        -%}

                        {% capture accordion_heading_capture %}
                          {{ block.settings.accordion_heading }}
                        {% endcapture %}
                        {% capture accordion_content_capture %}
                          {{ accordion_content }}
                        {% endcapture %}
                        {%
                          render 'accordion-item',
                          accordion_heading_capture: accordion_heading_capture,
                          accordion_content_capture: accordion_content_capture,
                          default_open: block.settings.default_open_accordion,
                          unique_id: block.id
                        %}
                    </div><!-- /.product-blocks__block -->
                    <div class="clear"></div>
                  {% when 'complementary_products' %}

                    <div class="complementary__products product-blocks__block product-blocks__block--{{ block.type }}{% if block.settings.show_as_accordion %} product-blocks__block--accordion-item{% endif %}" data-complementary-products {{ block.shopify_attributes }}>
                      {% if block.settings.show_as_accordion %}
                        {% capture accordion_heading_capture %}
                          {{ block.settings.heading | escape }}
                        {% endcapture %}
                        {% capture accordion_content_capture %}
                          {% render 'complementary-products',
                            block: block,
                            section: section,
                            product: product
                          %}
                        {% endcapture %}
                        {%
                          render 'accordion-item',
                          accordion_heading_capture: accordion_heading_capture,
                          accordion_content_capture: accordion_content_capture,
                          default_open: block.settings.default_open_accordion,
                          unique_id: block.id
                        %}
                      {% else %}
                        {% render 'complementary-products',
                          block: block,
                          section: section,
                          product: product
                        %}
                      {% endif %}
                    </div>  
                  {% else %}
                    {% continue %}
                {% endcase %}
              {% endfor %}
            {% endif %}
          </div>
          <div class="form span-6 sm-span-12 auto">
            {{ product_blocks_area }}
          </div>
        </div>
      {% else %}
        <div class="{{ gallery_class }} md-span-12 sm-span-12 auto">
          {{ layout_images }}
        </div>
        <div class="product--content__right js-product-bottom {{ content_class }} md-span-12 sm-span-12 auto">
