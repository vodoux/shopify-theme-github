

{% if product.available %}
  {% capture product_form_config %}
  {
    "money_format": {{ shop.money_format | json }},
    "enable_history": false,
    "sold_out": {{ "products.product.sold_out" | t | json }},
    "button": {{ 'products.product.add_to_cart' | t | json }},
    "unavailable": {{ 'products.product.unavailable' | t | json }}
  }
  {% endcapture %}
    {% if product.variants.size == 1 %}
      {% form 'product', product, data-product-form:product_form_config %}

        <div class="product-variants"></div><!-- product variants -->
        <input  type="hidden" id="{{ variant.id }}" name="id" data-sku="{{ variant.sku }}" value="{{ product.variants[0].id }}" />
          <button class="add AddtoCart js-ajax-submit" type="button" name="button" data-quick-add>
            {% render 'snip-icons',
              wrapper: '.quick-add-to-cart',
              type: 'vantage-theme',
              icon: 'plus',
              size: '18px',
              fill: 'var(--directional-color)',
              hover: 'var(--directional-color)' %}
          </button>
        {% endform %}
    {% elsif product.options.size == 1 and product.variants.size > 1 %}
      {% for option in product.options_with_values %}
        {% assign option_index = forloop.index0 %}
        {% assign add = 'products.product.add_to_cart' | t %}
          <wau-quick-add data-product-form-id="{{ product.id }}">
          <div class="quick--add_swatch">
            <ul data-option-index="{{ option_index }}" class="quick--add_options">
              {% for variant in product.variants %}
                {% if variant.available %}
                  <li data-option-title="{{ variant.title | escape }}" class="value--{{ variant.title | handle }} variant--quick_add">
                    <button class="add" data-variant-id="{{ variant.id }}"
                    >
                      {{ variant.title | escape }}
                    </button>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div><!-- .swatch -->
          </wau-quick-add>
      {% endfor %}
    {% endif %}
{% endif %}